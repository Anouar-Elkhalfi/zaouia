<h1>Appointment Details</h1>

<p>
  <strong>Date:</strong> <%= @appointment.date %>
</p>

<p>
  <strong>Time:</strong> <%= @appointment.time %>
</p>

<p>
  <strong>Medical Care:</strong> <%= @appointment.medical_care.name %>
</p>

<p>
  <strong>Location:</strong> <%= @appointment.medical_care.address %>
</p>

<%= link_to "Back to Appointments", appointments_path, class: "btn btn-secondary" %>
<%= link_to "Cancel Appointment", appointment_path(@appointment), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>


